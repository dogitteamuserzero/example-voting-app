version: 'v2'
services:
  vote:
    image: {{DOCKER_REGISTRY_HOST}}/examplevotingapp_vote:v1
    ports:
      - '5000:80'
    networks:
      - front-tier
      - back-tier

  result:
    image: {{DOCKER_REGISTRY_HOST}}/examplevotingapp_result:v1
    ports:
      - '5001:80'
      - '5858:5858'
    networks:
      - front-tier
      - back-tier

  worker:
    image: {{DOCKER_REGISTRY_HOST}}/examplevotingapp_worker:v1
    networks:
      - back-tier

  redis:
    image: 'redis:alpine'
    networks:
      - back-tier

  db:
    image: 'postgres:15-alpine'
    environment :
      POSTGRES_USER: {{POSTGRES_USER}} 
      POSTGRES_PASSWORD: {{POSTGRES_PASSWORD}}
    volumes:
      - /var/lib/postgresql/data:/var/lib/postgresql/data
    networks:
      - back-tier

networks:
  front-tier:
    ipam:
      driver: default
      config:
        - subnet: 172.28.1.0/24
  back-tier:
    ipam:
      driver: default
      config:
        - subnet: 172.28.2.0/24
