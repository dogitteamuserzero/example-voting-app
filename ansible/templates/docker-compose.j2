# for running in docker compose with prebuilt images
version: '2'
services:
  vote:
    image: {{LOCAL_REGISTRY}}/{{IMAGE_VOTE}}:{{IMAGE_VERSION}}
    ports:
      - "5000:80"
    depends_on:
      - redis
    networks:
      - front-tier
      - back-tier

  result:
    image: {{LOCAL_REGISTRY}}/{{IMAGE_RESULT}}:{{IMAGE_VERSION}}
    ports:
      - "5001:80"
    depends_on:
      - db
    networks:
      - front-tier
      - back-tier

  worker:
    image: {{LOCAL_REGISTRY}}/{{IMAGE_WORKER}}:{{IMAGE_VERSION}}
    depends_on:
      - redis
      - db
    networks:
      - back-tier

  redis:
    image: redis:alpine
    networks:
      - back-tier

  db:
    image: postgres:15-alpine
    environment:
      POSTGRES_USER: "{{POSTGRES_USER}}"
      POSTGRES_PASSWORD: "{{POSTGRES_PASSWORD}}"
    volumes:
      - "db-data:/var/lib/postgresql/data"

volumes:
  db-data:

networks:
  front-tier:
  back-tier:
